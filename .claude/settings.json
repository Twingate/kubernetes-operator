{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "defaultMode": "default",
    "allow": [
      "Bash(poetry run *)",
      "Bash(poetry *)",
      "Bash(pytest *)",
      "Bash(python *)",
      "Bash(ruff *)",
      "Bash(mypy *)",
      "Bash(git checkout:*)",
      "Bash(git status)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Bash(git branch *)",
      "Bash(git checkout *)",
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(kubectl get *)",
      "Bash(kubectl describe *)",
      "Bash(kubectl apply *)",
      "Bash(kubectl delete *)",
      "Bash(kubectl logs *)",
      "Bash(minikube *)",
      "Bash(helm *)",
      "Bash(ls *)",
      "Bash(cat *)",
      "Bash(grep *)",
      "Bash(head:*)",
      "Bash(find *)"
    ],
    "deny": [
      "Bash(rm -rf *)",
      "Bash(kubectl delete *)",
      "Read(.env*)",
      "Read(.secrets/**)",
      "Edit(.env*)"
    ]
  },
  "enabledPlugins": {
    "github@claude-plugins-official": true,
    "linear@claude-plugins-official": true
  },
  "respectGitignore": true,
  "showTurnDuration": true
}
