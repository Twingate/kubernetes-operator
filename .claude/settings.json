{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "defaultMode": "default",
    "allow": [
      "Bash(make help)",
      "Bash(make run)",
      "Bash(make test*)",
      "Bash(make check)",
      "Bash(make lint*)",
      "Bash(make typecheck)",
      "Bash(make check-pre-commit)",
      "Bash(make lock)",
      "Bash(make dev-deps)",
      "Bash(make version)",
      "Bash(make gen-api-docs)",
      "Bash(poetry run *)",
      "Bash(pytest *)",
      "Bash(python *)",
      "Bash(ruff *)",
      "Bash(mypy *)",
      "Bash(git status)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Bash(git branch *)",
      "Bash(git checkout *)",
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(git push *)",
      "Bash(kubectl get *)",
      "Bash(kubectl describe *)",
      "Bash(kubectl logs *)",
      "Bash(minikube *)",
      "Bash(helm *)",
      "Bash(ls *)",
      "Bash(cat *)",
      "Bash(grep *)",
      "Bash(find *)"
    ],
    "deny": [
      "Bash(rm -rf *)",
      "Bash(kubectl delete *)",
      "Read(.env*)",
      "Read(.secrets/**)",
      "Edit(.env*)"
    ]
  },
  "enabledPlugins": {
    "github@claude-plugins-official": true,
    "linear@claude-plugins-official": true
  },
  "respectGitignore": true,
  "showTurnDuration": true
}
