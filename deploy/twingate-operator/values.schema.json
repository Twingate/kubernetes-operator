{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "title": "Twingate Kubernetes Operator Chart Schema",
    "properties": {
        "image": {
            "type": "object",
            "default": {},
            "title": "The image Schema",
            "properties": {
                "repository": {
                    "type": "string",
                    "default": "",
                    "title": "The repository Schema",
                    "examples": [
                        "twingate/connector"
                    ]
                },
                "tag": {
                    "oneOf": [
                        {"type": "integer"},
                        {"type": "string"}
                    ],
                    "default": 0,
                    "title": "The tag Schema",
                    "examples": [
                        1, "latest"
                    ]
                },
                "pullPolicy": {
                    "type": "string",
                    "default": "",
                    "title": "The pullPolicy Schema",
                    "enum": [
                        "Always",
                        "IfNotPresent",
                        "Never"
                    ]
                }
            },
            "examples": [{
                "repository": "twingate/connector",
                "tag": 1,
                "pullPolicy": "Always"
            }]
        },
        "twingateOperator": {
            "type": "object",
            "default": {},
            "title": "The twingateOperator Schema",
            "oneOf": [
                {
                    "required": ["apiKey", "network", "remoteNetworkId"]
                },
                {
                    "required": ["existingAPIKeySecret", "network", "remoteNetworkId"]
                },
                {
                    "required": ["apiKey", "network", "remoteNetworkName"]
                },
                {
                    "required": ["existingAPIKeySecret", "network", "remoteNetworkName"]
                }
            ],
            "properties": {
                "apiKey": { "type": "string" },
                "existingAPIKeySecret": {
                    "type": "object",
                    "title": "An existing secret with the API Key to be used by the operator.",
                    "required": ["name", "key"],
                    "properties": {
                        "name": {
                            "type": "string",
                            "default": "",
                            "title": "The name of the Secret object",
                            "examples": [
                                "twingate-operator"
                            ]
                        },
                        "key": {
                            "type": "string",
                            "default": "",
                            "title": "The key for the API Key value in the Secret object",
                            "examples": [
                                "TWINGATE_API_KEY"
                            ]
                        }
                    },
                    "examples": [{
                        "name": "twingate-operator",
                        "key": "apiKey"
                    }]
                },
                "network": { "type": "string" },
                "remoteNetworkId": { "type": "string" },
                "logFormat": {
                    "type": "string",
                    "default": "full",
                    "enum": [
                        "json",
                        "plain",
                        "full"
                    ]
                }
            },
            "examples": [{
              "apiKey": "sdlkwdlsknsldknsldkcnm",
              "network": "my-network",
              "remoteNetworkId": "UmVtb3RlTmV0d29yazo5Njc0OTU="
            }]
        }
    }
}
